TARGETS = pop3server
CC = gcc
CFLAGS = -Wall
LDLIBS = -lpthread -lrt

pop3server: $(OBJ) 
	$(CC) $(CFLAGS) -o ../../bin/$@ $^ $(LDLIBS)

clean:
	rm -fv $(TARGETS) *.o *~

OBJ =
	iniciarServidor.o
	main.o
	parsearOrden.o
	atenderCliente.o
	verificarOrden.o
	procesarUSER.o
	procesarPASS.o
	procesarLIST.o
	recuperarListaMail.o
	procesarSTAT.o
	procesarRETR.o
	procesarNOOP.o
	procesarDELE.o
	recuperarCantidadMails.o
	procesarRSET.o
	procesarQUIT.o
	recuperarFecha.o
	procesarTransaccion.o
	crearCola.o
	escribirEnCola.o
	recuperarParametros.o
